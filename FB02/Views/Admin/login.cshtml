
@{
    Layout = null;
}






<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Easy dose | Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/tmp/dist/css/adminlte.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/tmp/plugins/iCheck/square/blue.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/tmp/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/tmp/plugins/toastr/toastr.min.css">
    <!-- bootstrap rtl -->
    <link rel="stylesheet" href="~/tmp/dist/css/bootstrap-rtl.min.css">
    <!-- template rtl version -->
    <link rel="stylesheet" href="~/tmp/dist/css/custom-style.css">


</head>

<body class="hold-transition login-page">
    <div class="login-box">

        <div class="w-100 text-center mb-5">
            <img width="150" src="~/tmp/dist/img/logos/pro 3.png" alt="">
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">تسجيل الدخول</p>

                <form action="/Admin/Login" method="post">
                    <div class="input-group mb-3">
                        <input type="text" id="name" name="username" class="form-control" placeholder="إسم المستخدم">
                        <div class="input-group-append">
                            <span class="fa fa-envelope input-group-text"></span>
                        </div>


                    </div>
                    <small id="nameError" style="display:none" class="text-danger  error">من فضلك ادخل اسم المستخدم</small>
                    <div class="input-group mb-3">
                        <input type="password" id="pass" name="pass" class="form-control" placeholder="كلمة المرور">
                        <div class="input-group-append">
                            <span class="fa fa-lock input-group-text"></span>
                        </div>

                    </div>
                    <small id="passError" style="display:none" class="text-danger  error">من فضلك ادخل كلمة المرور</small>
                    <div class="w-100 text-center mt-4">
                        <button onclick="login()" type="submit" class="btn btn-primary">تسجيل الدخول</button>
                    </div>
                </form>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/tmp/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/tmp/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- iCheck -->
    <script src="~/tmp/plugins/iCheck/icheck.min.js"></script>
    <!-- Toastr -->
    <script src="~/tmp/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/tmp/plugins/toastr/toastr.min.js"></script>

</body>

</html>


